{  
   "$schema":"https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion":"1.0.0.0",
   "parameters":{  
      "sqlVMName":{  
         "type":"string"
      },
      "noOfSqlVM":{
          "type": "int"
      },
      "location":{  
         "type":"string"
      },
      "adminUsername":{  
         "type":"string"
      },
      "adminPassword":{  
         "type":"securestring"
      },
      "domainName":{  
         "type":"string"
      },
      "createClusterModulesURL":{  
         "type":"string"
      },
      "createClusterConfigurationFunction":{  
         "type":"string"
      },
      "clusterName":{  
         "type":"string"
      },
      "sharePath":{  
         "type":"string"
      },
      "sqlwVMName":{  
         "type":"string"
      }
   },
   "resources":[  
      {  
         "type":"Microsoft.Compute/virtualMachines/extensions",
         "name":"[concat(parameters('sqlVMName'),copyIndex(),'/configuringAlwaysOn')]",
         "apiVersion":"2015-06-15",
         "location":"[parameters('location')]",
         "copy": {
            "name": "WSFCPrepareLoop",
            "count": "[parameters('noOfSqlVm')]"
         },
         "properties":{  
            "publisher":"Microsoft.Powershell",
            "type":"DSC",
            "typeHandlerVersion":"2.19",
            "autoUpgradeMinorVersion":false,
            "settings":{  
               "modulesURL":"[parameters('createClusterModulesURL')]",
               "configurationFunction":"[parameters('createClusterConfigurationFunction')]",
               "properties":{  
                  "domainName":"[parameters('domainName')]",
                  "clusterName":"[parameters('clusterName')]",
                  "sharePath":"[concat('\\\\',parameters('sqlwVMName'),'\\',parameters('sharePath'))]",
                  "nodes":[  
                     "[concat(parameters('sqlVMName'),copyIndex())]"
                  ],
                  "adminCreds":{  
                     "userName":"[parameters('adminUserName')]",
                     "password":"privateSettingsRef:adminPassword"
                  }
               }
            },
            "protectedSettings":{  
               "items":{  
                  "adminPassword":"[parameters('adminPassword')]"
               }
            }
         }
      }
   ],
   "outputs":{  

   }
}