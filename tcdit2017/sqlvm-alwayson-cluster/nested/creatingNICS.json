{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mainLocation": {
      "type": "string"
    },
    "drLocation": {
      "type": "string"
    },
    "adPDCNicName": {
      "type": "string"
    },
    "adPDCNICIPAddress": {
      "type": "string"
    },
    "mainStaticSubnetRef": {
      "type": "string"
    },
    "drStaticSubnetRef": {
      "type": "string"
    },
    "adBDCNicName": {
      "type": "string"
    },
    "adBDCNICIPAddress": {
      "type": "string"
    },
    "sqlVMName": {
      "type": "string"
    },
    "mainSqlSubnetRef": {
      "type": "string"
    },
    "mainSqlBEAddressPoolID": {
      "type": "string"
    },
    "drSqlSubnetRef": {
      "type": "string"
    },
    "drSqlBEAddressPoolID": {
      "type": "string"
    },
    "sqlwNicName": {
      "type": "string"
    },
    "primaryDCIPAddressNameWithSuffix": {
      "type": "string"
    },
    "backupDCIPAddressNameWithSuffix": {
      "type": "string"
    },
    "sql0AddressNameWithSuffix": {
      "type": "string"
    },
     "sql1AddressNameWithSuffix": {
      "type": "string"
    },
     "sql2AddressNameWithSuffix": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[parameters('adPDCNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('mainLocation')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('adPDCNICIPAddress')]",
              "subnet": {
                "id": "[parameters('mainStaticSubnetRef')]"
              },
              "publicIpAddress": {
                "id": "[resourceId(resourceGroup().Name,'Microsoft.Network/publicIpAddresses', parameters('primaryDCIPAddressNameWithSuffix'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('adBDCNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('drLocation')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('adBDCNICIPAddress')]",
              "subnet": {
                "id": "[parameters('drStaticSubnetRef')]"
              },
              "publicIpAddress": {
                "id": "[resourceId(resourceGroup().Name,'Microsoft.Network/publicIpAddresses', parameters('backupDCIPAddressNameWithSuffix'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('sqlVMName'),'0-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('mainLocation')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('mainSqlSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('mainSqlBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('sqlVMName'),'1-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('mainLocation')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('mainSqlSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('mainSqlBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('sqlVMName'),'2-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('drLocation')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('drSqlSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('drSqlBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('sqlwNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('mainLocation')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('mainSqlSubnetRef')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}